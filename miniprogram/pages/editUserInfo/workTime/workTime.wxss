/* miniprogram/pages/editUserInfo/workTime/workTime.wxss */
.workTime{
  width:100%;
  height:100%;
  padding:20rpx;
}
.setTime{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom:30rpx;
}

.setTime input{
  margin-left:20rpx;
  margin-top:10rpx;
  width:180rpx;
  border-bottom:1px solid black;
  padding-left:20rpx;
  text-align: center;
  /* border-radius: 20rpx; */
}
.setTime button:not([size='mini']){
  margin-top:10rpx;
  width:120rpx;
  height:60rpx;
  background-color:#259225;
  color:#fff;
  font-size:30rpx;
  font-weight:600;
  line-height: 60rpx;
}
.work{
  width:300rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin:30rpx;
}
.work input{
  width:180rpx;
  border-bottom:1px solid black;
  text-align: center;
}
.work text{
  font-size:40rpx;
}
.pickTime{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin:20rpx;
}

.time-item {
  width: 180rpx;
  height: 70rpx;
  background: #f1f3f8;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #8c9aa8;
  margin:0 10rpx;
  text-align: center;
  line-height: 70rpx;
}