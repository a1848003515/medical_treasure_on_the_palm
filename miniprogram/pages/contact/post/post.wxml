<button bindtap="handlePost">发表</button>
<view class="detail">
  <view class="content">
    <view class="content-text">
      <text class="text">标题：</text>
      <input placeholder="请输入标题" bindinput="handleGet1"></input>
    </view>
    <view class=" content-text ">
      <text class="text">分类：</text>
      <input placeholder="请输入分类" bindinput="handleGet2"></input>
    </view>
    
    <view class="content-text">
      <text class="text">作者：</text>
      <input placeholder="请输入作者" bindinput="handleGet3"></input>
    </view>
    <view class=" content-text1">
      <text class="text">详情：</text>
      <textarea placeholder="请输入内容" maxlength="5000" bindinput="handleGet4"></textarea>
    </view>
  </view>


</view>
