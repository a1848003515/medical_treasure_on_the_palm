/* miniprogram/pages/order/order.wxss */
.order{
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  flex-direction: column;
}
.tab {
  width:20%;
  margin:0 50rpx;

  text-align: center;
  padding: 10rpx 0;
}

.topTabSwiper {
  width:100%;

  display: flex;
  justify-content: space-between
}

